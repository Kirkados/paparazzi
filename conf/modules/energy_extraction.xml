<!DOCTYPE module SYSTEM "module.dtd">

<module name="energy_extraction" dir="energy">
  <doc>
    <description>Briefly estimates the in-plane wind gradients and defines a longitudinal control via pitch angle.</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings name="gust">
        <dl_setting MAX="1." MIN="0." STEP="0.0002" module="modules/energy/energy_extraction" VAR="gust_gains.p_wx" shortname="P_WX" handler="Set_WX_P"/>
        <dl_setting MAX="1." MIN="0." STEP="0.0002" module="modules/energy/energy_extraction" VAR="gust_gains.d_wx" shortname="D_WX" handler="Set_WX_D"/>
        <dl_setting MAX="1." MIN="0." STEP="0.0002" module="modules/energy/energy_extraction" VAR="gust_gains.p_wz" shortname="P_WZ" handler="Set_WZ_P"/>
        <dl_setting MAX="1." MIN="0." STEP="0.0002" module="modules/energy/energy_extraction" VAR="gust_gains.d_wz" shortname="D_WZ" handler="Set_WZ_D"/>
        <dl_setting MAX="1." MIN="-1." STEP="1.0" module="modules/energy/energy_extraction" VAR="gust_gains.wx_sign" shortname="WX_S" handler="Set_WX_Sign"/>
        <dl_setting MAX="1." MIN="-1." STEP="1.0" module="modules/energy/energy_extraction" VAR="gust_gains.wz_sign" shortname="WZ_S" handler="Set_WZ_Sign"/>
        <dl_setting MAX="500" MIN="1" STEP="1" module="modules/energy/energy_extraction" VAR="gust_gains.sample_nr" shortname="Sample" handler="Set_Sampling"/>
        <dl_setting MIN="0" STEP="1" MAX="1" module="modules/energy/energy_extraction" VAR="gust_gains.throttle_control" shortname="Throt_Ctl" handler="Set_Throttle_Control"/>
        <dl_setting MIN="0" STEP="1" MAX="100" module="modules/energy/energy_extraction" VAR="gust_gains.flight_coridor" shortname="Coridor" handler="Set_Flight_Coridor"/>
        <dl_setting MAX="1" MIN="0.0" STEP="0.01" VAR="v_ctl_auto_throttle_cruise_throttle" shortname="cruise throttle" module="guidance/guidance_v" handler="SetCruiseThrottle" param="V_CTL_AUTO_THROTTLE_NOMINAL_CRUISE_THROTTLE"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="energy_extraction.h"/>
  </header>
  <init fun="gust_init()"/>
  <periodic fun="gust_periodic()" freq="50"/>
  <!-- <event fun="gust_event()"/> -->
  <!--datalink message="gust_datalink()" fun="gust_datalink_callback()"/-->
  <makefile>
    <file name="energy_extraction.c"/>
  </makefile>
</module>

