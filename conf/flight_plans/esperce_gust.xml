<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="380" ground_alt="322" lat0="43.315833" lon0="1.4030555" max_dist_from_home="1500" name="Basic" security_height="25">
  <header>
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0" y="0"/>
    <waypoint name="STDBY" x="1.8" y="17.8"/>
    <waypoint name="1" x="-80.8" y="82.8"/>
    <waypoint name="2" x="139.6" y="104.1"/>
    <waypoint name="MOB" x="137.0" y="-11.6"/>
    <waypoint name="S1" x="-123.3" y="-68.9"/>
    <waypoint name="S2" x="185.8" y="146.6"/>
    <waypoint alt="215.0" name="AF" x="161.3" y="40.6"/>
    <waypoint alt="185.0" name="TD" x="49.9" y="16.7"/>
    <waypoint name="_BASELEG" x="168.8" y="-13.8"/>
    <waypoint name="CLIMB" x="-131.2" y="-1.4"/>
  </waypoints>
  <variables>
    <variable init="0" max="179" min="-180" step="1" var="angle_ps"/>
    <variable init="1.0" max="10." min="0." step="0.1" var="step_time"/>
    <variable init="15." max="50." min="0." step="1.0" var="step_angle"/>
    <variable init="0." max="10." min="0." step="0.1" var="freq"/>
    <variable init="20." max="30." min="0." step="1." var="ampl"/>
  </variables>
  <exceptions/>
  <blocks>
    <block name="Wait GPS">
      <set value="1" var="autopilot.kill_throttle"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <set value="1" var="autopilot.kill_throttle"/>
      <attitude roll="0" throttle="0" vmode="throttle"/>
    </block>
    <block group="home" key="t" name="Takeoff" strip_button="Takeoff (wp CLIMB)" strip_icon="takeoff.png">
      <exception cond="GetPosAlt() > GetAltRef()+25" deroute="Standby"/>
      <set value="0" var="autopilot.kill_throttle"/>
      <set value="0" var="autopilot.flight_time"/>
      <go from="HOME" pitch="15" throttle="1.0" vmode="throttle" wp="CLIMB"/>
    </block>
    <block group="home" key="Ctrl+a" name="Standby" strip_button="Standby" strip_icon="home.png">
      <circle radius="nav_radius" wp="STDBY"/>
    </block>
    <block group="base_pattern" key="F8" name="Figure 8 around wp 1" strip_button="Figure 8 (wp 1-2)" strip_icon="eight.png">
      <eight center="1" radius="nav_radius" turn_around="2"/>
    </block>
    <block group="base_pattern" name="Oval 1-2" strip_button="Oval (wp 1-2)" strip_icon="oval.png">
      <oval p1="1" p2="2" radius="nav_radius"/>
    </block>
    <block group="base_pattern" name="Oss-Oval 1-2" strip_button="Oval (wp 1-2)" strip_icon="oval.png">
      <oval p1="1" p2="2" pitch="ampl*sinf(freq*get_sys_time_float())" radius="nav_radius" throttle="v_ctl_auto_throttle_cruise_throttle" vmode="throttle"/>
    </block>
    <block group="base_pattern" name="Roll-Tunning" strip_button="Oval (wp 1-2)" strip_icon="path.png">
      <attitude roll="ampl*sinf(freq*get_sys_time_float())" throttle="v_ctl_auto_throttle_cruise_throttle" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Roll Steps fixed ALT">
      <exception cond="NavBlockTime() > 30" deroute="Standby"/>
      <while cond="TRUE">
        <attitude alt="250" roll="step_angle" until=" stage_time > step_time" vmode="alt"/>
        <attitude alt="250" roll="-step_angle" until="stage_time > step_time" vmode="alt"/>
      </while>
    </block>
    <block name="Roll Steps fixed THROTT">
      <exception cond="NavBlockTime() > 30" deroute="Standby"/>
      <while cond="TRUE">
        <attitude roll="step_angle" throttle="v_ctl_auto_throttle_cruise_throttle" until=" stage_time > step_time" vmode="throttle"/>
        <attitude roll="-step_angle" throttle="v_ctl_auto_throttle_cruise_throttle" until="stage_time > step_time" vmode="throttle"/>
      </while>
    </block>
    <block name="Steps roll from var">
      <exception cond="NavBlockTime() > 30" deroute="Standby"/>
      <while cond="TRUE">
        <attitude alt="250" roll="step_angle" until=" stage_time > step_time" vmode="alt"/>
        <attitude alt="250" roll="-step_angle" until="stage_time > step_time" vmode="alt"/>
      </while>
    </block>
    <block name="Pitch Steps fixed ALT">
      <exception cond="NavBlockTime() > 30" deroute="Standby"/>
      <while cond="TRUE">
        <attitude alt="250" pitch="step_angle" roll="0.0" until=" stage_time > step_time" vmode="alt"/>
        <attitude alt="250" pitch="-step_angle" roll="0.0" until=" stage_time > step_time" vmode="alt"/>
      </while>
    </block>
    <block name="Pitch Steps fixed THROTT">
      <exception cond="NavBlockTime() > 30" deroute="Standby"/>
      <while cond="TRUE">
        <attitude pitch="step_angle" roll="0.0" throttle="v_ctl_auto_throttle_cruise_throttle" until=" stage_time > step_time" vmode="throttle"/>
        <attitude pitch="-step_angle" roll="0.0" throttle="v_ctl_auto_throttle_cruise_throttle" until=" stage_time > step_time" vmode="throttle"/>
      </while>
    </block>
    <block group="base_pattern" name="MOB" strip_button="Circle around here" strip_icon="mob.png">
      <call_once fun="NavSetWaypointHere(WP_MOB)"/>
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <circle radius="nav_radius" wp="MOB"/>
    </block>
    <block group="extra_pattern" name="Survey S1-S2" strip_button="Survey (wp S1-S2)" strip_icon="survey.png">
      <survey_rectangle grid="150" wp1="S1" wp2="S2"/>
    </block>
    <block group="extra_pattern" name="Path 1,2,S1,S2,STDBY" strip_button="Path (1,2,S1,S2,STDBY)" strip_icon="path.png">
      <path wpts="1,2 S1"/>
      <path approaching_time="1" pitch="auto" throttle="0.4" wpts="S1, S2 STDBY"/>
      <deroute block="Standby"/>
    </block>
    <block group="land" name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block group="land" name="Land Left AF-TD" strip_button="Land left (wp AF-TD)" strip_icon="land-left.png">
      <set value="-DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="land">
      <call_once fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), 10 > fabs(GetPosAlt() - WaypointAlt(WP__BASELEG)))" wp="_BASELEG"/>
    </block>
    <block name="final">
      <exception cond="GetAltRef() + 10 > GetPosAlt()" deroute="flare"/>
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>
    <block name="flare">
      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="TD"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
